{
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "./dist",
    "target": "es6",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "incremental": true,
    "declaration": false,
    "strict": true,
    "typeRoots": [
      "./src/@types"
    ],
    "types": ["jest", "@types/jest", "@testing-library/jest-dom"]
  },
  "exclude": ["**/*.test.tsx", "**/*.test.ts", "__tests__", "__mocks__"],
  "include": ["src"]
}
